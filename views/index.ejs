<div class="boxlivroindex">
  <div class="row">  
      <% livro.forEach(livro=> {%>
    <div class="col col-sm-6 col-md-4 col-lg-2">
        <div class="cover" data-bs-toggle="modal" data-bs-target="#exampleModal">
        <img class="capaslivro" src="/img/<%=livro.nome_livro%>.jpeg" alt="NADA NADA">
        </div>
    </div> 
  <%})%>    
  </div>
</div>


